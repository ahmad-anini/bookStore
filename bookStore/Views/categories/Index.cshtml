@using bookStore.ViewModels
@model List<CategoryVM>
@section Title {
Category
}
@section SubTitle {
All Categories
}
@section Buttons {
    <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
        Create
    </a>
}

@if (!Model.Any())
{
    <div class="card-body">
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
            No Data Found .
        </div>
    </div>
}
else
{
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>

                        <td>
                            <div class="d-flex">
                                <a asp-controller="Categories" asp-action="Details" asp-route-id="@item.Id" class="mr-2 btn btn-primary">
                                    Details
                                </a>
                                <a asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id" class="mr-2 btn btn-primary">
                                     edit
                                </a>
                                <a asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </div>
                    
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


