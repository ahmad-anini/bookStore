@using bookStore.ViewModels
@model List<BookVM>
@section Title {
Books
}
@section SubTitle {
All Books
}

@section Buttons {
    @if(User.Identity.IsAuthenticated)
    {
        <a asp-controller="Books" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-square"></i>
            Create
        </a>
    }
}

@if (!Model.Any())
{
    <div class="card-body">
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
            No Data Found .
        </div>
    </div>
}
else
{
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Auther</th>
                    <th>Categories</th>
                    <th>Publisher</th>
                    <th>Book Image</th>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <th>Action</th>
                    }
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var book in @Model)
                {
                    <tr>
                        <td>@book.Id</td>
                        <td>@book.Title</td>
                        <td>@book.Description</td>
                        <td>@book.Auther</td>
                        <td>@String.Join(", ", book.Categories)</td>
                        <td>@book.Publisher</td>


                        <td> <img src="~/image/Books/@book.imageURL" width="50px" /></td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <td>
                                <div class="d-flex justify-content-center">
                                    <a data-id="@book.Id" class="btn btn-danger js-delete" aria-label="Delete book">
                                        <i class="fas fa-trash" aria-hidden="true"></i> Delete
                                    </a>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

}

@section Scripts {
    <script type="module">
        import { handleDelete } from '/js/handleAlerts.js';
        handleDelete("Books");
    </script>
}




