@using bookStore.ViewModels
@model List<ApplicationUserVM>
@section Title {
Users
}
@section SubTitle {
All Users
}
@section Buttons {
    <a asp-controller="Users" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-square"></i>
        Create
    </a>
}

@if (!Model.Any())
{
    <div class="card-body">
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
            No Data Found .
        </div>
    </div>
}
else
{
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>Roles</th>
                    <th>Actions</th>
                    
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Address</td>
                        <td>@String.Join(", ",item.Roles)</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a  data-id="@item.Id" class="btn btn-danger js-delete">Delete</a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


@section Scripts {
    <script type="module">
        import { handleDelete } from '/js/handleAlerts.js';
        handleDelete("Users");
    </script>
}


