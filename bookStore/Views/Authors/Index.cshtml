@using bookStore.ViewModels
@model List<AuthorVM>
@section Title {
Author
}
@section SubTitle {
All Authors
}
@section Buttons {
    <a asp-controller="Authors" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-square"></i>
        Create
    </a>
}

@if (!Model.Any())
{
    <div class="card-body">
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
            No Data Found .
        </div>
    </div>
}
else
{
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>

                        <td>
                            <div class="d-flex justify-content-center">
                                <a asp-controller="Authors" asp-action="Detales" asp-route-id="@item.Id" class="mr-2 btn btn-primary">
                                    <i class="fas fa-info"></i>
                                    Details
                                </a>
                                <a asp-controller="Authors" asp-action="Edit" asp-route-id="@item.Id" class="mr-2 btn  btn-info">
                                    <i class="fas fa-edit"></i>
                                    edit
                                </a>
                                <a  data-id="@item.Id" class="btn btn-danger js-delete">
                                    <i class="fas fa-trash"></i>
                                    Delete
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


@section Scripts {
    <script type="module">
        import { handleDelete } from '/js/handleAlerts.js';
        handleDelete("Authors");
    </script>
}


