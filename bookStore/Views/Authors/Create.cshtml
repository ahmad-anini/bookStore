@using bookStore.ViewModels
@model AuthorFormVM

@section Title {
Authors
}
@section SubTitle {
Create
}

<form asp-controller="Authors" asp-action="Create" method="post">
    <div class="card-body">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary js-create">Submit</button>
    </div>
</form>


@section Scripts {
    <script type="module">
        import { handleCreate } from '/js/handleAlerts.js';
        handleCreate("Authors");
    </script>
}