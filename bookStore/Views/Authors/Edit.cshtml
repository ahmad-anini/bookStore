@using bookStore.ViewModels
@model AuthorFormVM

@section Title {
Authors
}
@section SubTitle {
Edit
}

<form asp-controller="Authors" asp-action="Edit" method="post">
    <div class="card-body">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary js-edit">Submit</button>
    </div>
</form>


@section Scripts {
    <script type="module">
        import {  handleUpdate } from '/js/handleAlerts.js';
        handleUpdate("Authors");
    </script>
}
